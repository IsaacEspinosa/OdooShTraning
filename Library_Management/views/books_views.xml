<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="book_view_list">
            <field name="name">book.view.list</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree string="Libros">
                    <field name="name"/>
                    <field name="publisher"/>
                    <field name="gender"/>
                    <field name="ISBN"/>
                </tree>
            </field> 
        </record>
        <record model="ir.ui.view" id="book_view_form">
            <field name="name">book.view.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Formulario de tareas">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="author"/>
                                <field name="editors"/>
                            </group>
                            <group>
                                <field name="ISBN"/>
                                <field name="gender"/>
                                <field name="publisher"/>
                                <field name="editionYear"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Texto de nota">
                                <field name="noteText"/>
                            </page>
                            <page string="Existencias">
                                <field name="copybook_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="book_view_search">
            <field name="name">book.view.search</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="author"/>
                    <field name="ISBN"/>
                </search>
            </field> 
        </record>
        <record model="ir.ui.view" id="book_view_form">
            <field name="name">copybook.view.form</field>
            <field name="model">library.copybook</field>
            <field name="arch" type="xml">
                <form string="Formulario">
                    <sheet>
                        <group>
                            <field name="id"/>
                        </group>
                        <notebook>
                            <page string="Alquileres">
                                <field name="rentals_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="copybook_view_list">
            <field name="name">copybook.view.list</field>
            <field name="model">library.copybook</field>
            <field name="arch" type="xml">
                <tree string="Libros">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="ISBN"/>
                </tree>
            </field> 
        </record>
    </data>      
</odoo>